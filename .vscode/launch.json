{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--account_id",
                "8",
                "--configuration_id",
                "1"
            ]
        },
        {
            "name": "Python Debugger: Main",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Buy",
            "type": "debugpy",
            "request": "launch",
            "program": "main_buy.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Core",
            "type": "debugpy",
            "request": "launch",
            "program": "core.py",
            "console": "integratedTerminal"
        },
        {
            "type": "mix_task",
            "name": "Phoenix",
            "request": "launch",
            "task": "phx.server",
            "projectDir": "${workspaceRoot}"
        },
    ]
}